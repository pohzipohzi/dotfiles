{
    "languageserver": {
        "bash": {
            "args": [
                "start"
            ],
            "command": "bash-language-server",
            "filetypes": [
                "sh"
            ],
            "ignoredRootPaths": [
                "~"
            ]
        },
        "ccls": {
            "command": "ccls",
            "filetypes": [
                "c",
                "cpp"
            ],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                },
                "clang": {
                    "extraArgs": [
                        "-isystem",
                        "/usr/include"
                    ]
                }
            },
            "rootPatterns": [
                ".ccls",
                "compile_commands.json",
                ".git/"
            ]
        },
        "golang": {
            "command": "gopls",
            "filetypes": [
                "go"
            ],
            "rootPatterns": [
                "go.mod"
            ]
        }
    },
    "snippets.ultisnips.directories": [
        "./snippets"
    ]
}
